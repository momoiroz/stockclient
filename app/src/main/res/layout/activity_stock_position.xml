<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stock_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Stock position"
        android:textColor="#673AB7"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_vcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VCB:"
        android:layout_below="@+id/stock_position"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_mwg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MWG:"
        android:layout_below="@+id/tv_vcb"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_vnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VNM:"
        android:layout_below="@+id/tv_mwg"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_vcbNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vcb_num"
        android:layout_below="@id/stock_position"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_mwgNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mwg_num"
        android:layout_below="@id/tv_vcb"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_vnmNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vnm_num"
        android:layout_below="@id/tv_mwg"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="73dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_stock_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="2.0"
            android:paddingTop="10dp"
            android:text="Back"
            android:textSize="25dp" />
    </LinearLayout>
</RelativeLayout>